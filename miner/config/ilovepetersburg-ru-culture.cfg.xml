<?xml version="1.0" encoding="UTF-8"?>

<config charset="UTF-8">
  <include path="common.xml"/>

  <var-def name="host">http://www.ilovepetersburg.ru</var-def>
  <var-def name="start_url"><template>${host}/culture</template></var-def>

  <var-def name="start_page">
    <call name="fetch_http"> 
      <call-param name="url">
        <var name="start_url"/>
      </call-param>
    </call>
  </var-def>

  <var-def name="sight-refs">
    <xpath expression="//div[@class='block-links']//table/tbody//a[@href!='/node/']/@href">
      <var name="start_page"/>
    </xpath>
  </var-def>

  <var-def name="sights">
    <!--<loop item="i" maxloops="20">-->
    <loop item="i">
      <list>
        <var name="sight-refs"/>
      </list>

      <body>
        <empty>
          <var-def name="sight_page_url">
            <template>
              ${host}${i}
            </template>
          </var-def>

          <var-def name="sight_page">
            <call name="fetch_http"> 
              <call-param name="url">
                <var name="sight_page_url"/>
              </call-param>
            </call>
          </var-def>

          <var-def name="sight_info">
            &lt;wrap&gt;
            <xpath expression="//div[@id='box-content']/table//div[@id='box-left']/div[@class='block-node nodetype2']/node()">
              <var name="sight_page"/>
            </xpath>
            &lt;/wrap&gt;
          </var-def>                               
        </empty>

        [Sight]
        [Name]
        <xpath expression="/wrap/h2/node()">
          <var name="sight_info" />
        </xpath>

        [Image]
        <xpath expression="/wrap//div[@class='image-box']//img/@src">
          <var name="sight_info" />
        </xpath>

        [Description]
        <xpath expression="/wrap//div[@style='font-size:16px;']/node()">
          <var name="sight_info" />
        </xpath>
      
        <!--
        <script return="escaped_desc"><![CDATA[
          escaped_desc = desc.toString().replaceAll("\'", "\\\'");
        ]]></script>
        -->

        [Source]
        <var name="sight_page_url"/>

        [Address]
        <var-def name="address">
          <xpath expression="/wrap//table//table/tbody/tr[2]/td[2]/node()">
            <var name="sight_info" />
          </xpath>
        </var-def>

        <!--
        <script return="fixed_addr"><![CDATA[
          p = java.util.regex.Pattern.compile(".*Адрес:\\s*(.*)");
          m = p.matcher(address.toString());
          if (m.matches()) {
            fixed_addr = m.group(1);
          } else {
            fixed_addr = address.toString();
          }
        ]]></script>
        -->

        [City]
        Санкт-Петербург

        <!--<template>${address.toString()}</template>-->
      </body>
    </loop>    
  </var-def>
</config>
