<?xml version="1.0" encoding="UTF-8"?>
<project name="ExcursionOrganizer" default="all" basedir=".">
  <description>
    Excursion Organizer
  </description>

  <!-- Setup general paths -->
  <property name="project.dir" location="."/>
  <property name="lib.dir" location="${project.dir}/lib"/>
  <property file="custom.properties"/>  
  
  <!-- Libs -->
  <path id="libs">
    <fileset dir="lib" includes="**/*.jar"/>
    <fileset dir="build" includes="**/*.class"/>
  </path>

  <property name="build.dir" location="${project.dir}/build"/>

  <property name="src.util.dir" location="${project.dir}/util/src/java/eo/util"/>
  <property name="src.model.dir" location="${project.dir}/model/src/java/eo/model"/>
  <property name="src.db.dir" location="${project.dir}/db/src/java/eo/db"/>
  <property name="src.miner.dir" location="${project.dir}/miner/src/java/eo/miner"/>
  <property name="src.processing.dir" location="${project.dir}/processing/src/java/eo/processing"/>
  <property name="src.frontend.http_server.dir" location="${project.dir}/frontend/http_server/src/java/eo/frontend/httpserver"/>

  <target name="init">
    <mkdir dir="${build.dir}"/>

    <delete>
      <fileset dir="${lib.dir}" includes="eo.jar"/>
    </delete>
  </target>

  <target name="util" depends="init">
    <javac srcdir="${src.util.dir}"
           destdir="${build.dir}"
           debug="true"
           deprecation="true"
           optimize="false"
           includeAntRuntime="false">
      <classpath refid="libs"/>
    </javac>
  </target>

  <target name="model" depends="init,util">
    <javac srcdir="${src.model.dir}"
           destdir="${build.dir}"
           debug="true"
           deprecation="true"
           optimize="false"
           includeAntRuntime="false">
      <classpath refid="libs"/>
    </javac>
  </target>

  <target name="db" depends="init,util,model">
    <javac srcdir="${src.db.dir}"
           destdir="${build.dir}"
           debug="true"
           deprecation="true"
           optimize="false"
           includeAntRuntime="false">
      <classpath refid="libs"/>
    </javac>
  </target>

  <target name="miner" depends="init,db">
    <javac srcdir="${src.miner.dir}"
           destdir="${build.dir}"
           debug="true"
           deprecation="true"
           optimize="false"
           includeAntRuntime="false">
      <classpath refid="libs"/>
    </javac>
  </target>

  <target name="processing" depends="init,db">
    <javac srcdir="${src.processing.dir}"
           destdir="${build.dir}"
           debug="true"
           deprecation="true"
           optimize="false"
           includeAntRuntime="false">
      <classpath refid="libs"/>
    </javac>
  </target>
  
  <!--
  <target name="frontend" depends="init">
    <delete>
      <fileset dir="${lib.dir}" includes="frontend.jar"/>
    </delete>

    <javac srcdir="${src.frontend.http_server.dir}"
           destdir="${build.frontend.http_server.dir}"
           debug="true"
           deprecation="true"
           optimize="false"
           includeAntRuntime="false">
      <classpath refid="libs"/>
    </javac>

    <jar destfile="${lib.dir}/frontend.jar">
      <fileset dir="${build.frontend.http_server.dir}" includes="**/*.class"/>
    </jar>
  </target>
  -->

  <target name="all" depends="util,model,db,miner,processing">
    <chmod file="${project.dir}/start.sh" perm="+x"/>

    <jar destfile="${lib.dir}/eo.jar">
      <fileset dir="${build.dir}" includes="**/*.class"/>
    </jar>
  </target>
</project>

