import java.net.*;
import java.io.*;

// ================================================================================

public class HttpServer {
    public static void main(final String[] argv) throws java.io.IOException {
        byte[] addr = {127, 0, 0, 1};
        ServerSocket svr = new ServerSocket(3000, 5, InetAddress.getByAddress(addr));


        while (true) {
            Socket s = svr.accept();
            
            OutputStream os = s.getOutputStream();
            String resp = //"Content-Type: text/html\r\nContent-Length: 30" +
                //"\r\n" +
                "<html><title>My FastCGI App</title><body>My FastCGI Application!</body></html>\r\n\r\n";

            os.write(resp.getBytes());
            s.close();

            System.out.println("I was called");
        }
    }
}